{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "es6",
        "rootDir": "src",
        "outDir": "dist",
        "isolatedModules":true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "experimentalDecorators": true,
    "filesGlob": [
        "src/**.ts"
    ],
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    },
    "files": [
        "src/index.ts",
        "src/riot-typed.d.ts",
        "src/riot.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
